@model AniTrack.Web.ViewModels.Genre.AddGenreFormModel

@{
    ViewData["Title"] = "Add Genre";
}

<h2>Add Genre</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter genre name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Genre</button>
    <a class="btn btn-secondary ms-2" asp-page="/Genre/Index">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
