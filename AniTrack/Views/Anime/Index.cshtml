@using AniTrack.Web.ViewModels.Anime
@model AnimePageViewModel
@{
    ViewData["Title"] = "Top Animes";
}

<h2>Top Animes</h2>
<div class="anime-grid">
    @foreach (var Anime in Model.Animes)
    {
        <div class="anime-card">
            <div class="anime-title">@Anime.Title</div>
            <a href="/Anime/Details/@Anime.Id">
                <img src="@Anime.ImageUrl" alt="@Anime.Title" class="anime-image" />
            </a>
        </div>
    }
</div>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Anime pagination" style="margin-top:2rem;">
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
}

<style>
    .anime-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 32px 24px; /* vertical and horizontal spacing between cards */
        justify-content: flex-start;
    }

    .anime-card {
        width: 220px;
        margin-bottom: 32px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .anime-title {
        font-size: 1.1rem;
        font-weight: 500;
        margin-bottom: 8px;
        text-align: center;
        color: #258cfb;
    }

    .anime-image {
        width: 100%;
        height: 320px;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.12);
    }
</style>