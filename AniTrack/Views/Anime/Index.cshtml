@using AniTrack.Web.ViewModels.Anime
@model IEnumerable<TopAnimesViewModel>
@{
    ViewData["Title"] = "Top Animes";
}

<h2>Top Animes</h2>
<div class="anime-grid">
    @foreach (var Anime in Model)
    {
        <div class="anime-card">
            <div class="anime-title">@Anime.Title</div>
            <a href="/Anime/Details/@Anime.Id">
                <img src="@Anime.ImageUrl" alt="@Anime.Title" class="anime-image" />
            </a>
        </div>
    }
</div>

<style>
    .anime-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 32px 24px; /* vertical and horizontal spacing between cards */
        justify-content: flex-start;
    }

    .anime-card {
        width: 220px;
        margin-bottom: 32px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .anime-title {
        font-size: 1.1rem;
        font-weight: 500;
        margin-bottom: 8px;
        text-align: center;
        color: #258cfb;
    }

    .anime-image {
        width: 100%;
        height: 320px;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.12);
    }
</style>