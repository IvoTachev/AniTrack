@{
    ViewData["Title"] = "About AniTrack";
}

<div class="about-container"
    style="max-width: 900px; margin: 2rem auto; background: #181818; color: #f5f5f5; border-radius: 10px; box-shadow: 0 2px 12px rgba(0,0,0,0.15); padding: 2rem;">
    <!-- Banner Image -->
    <div style="text-align: center; margin-bottom: 2rem;">
        <img src="~/images/Banner.png" alt="AniTrack Banner"
            style="max-width: 100%; border-radius: 8px;" />
    </div>

    <!-- About Text -->
    <h1 style="color: #0d6efd; margin-bottom: 1rem;">About AniTrack</h1>
    <p style="font-size: 1.15rem; line-height: 1.7;">
        AniTrack is your personal anime companion, designed to help you discover, track, and share your anime
        journey. Whether you're a seasoned otaku or just starting out, AniTrack makes it easy to organize your
        watchlist, rate your favorite shows, and connect with a community of fellow fans.
    </p>
    <p style="font-size: 1.15rem; line-height: 1.7;">
        <strong>Features include:</strong>
        <ul style="margin-top: 0.5rem; margin-bottom: 1.5rem;">
            <li>Track what you're watching, completed, or plan to watch</li>
            <li>Discover top-rated and trending anime</li>
            <li>Read detailed anime information and synopses</li>
            <li>Organize your anime list with custom statuses and ratings</li>
            <li>Connect with friends and share recommendations</li>
        </ul>
    </p>
    <p style="font-size: 1.15rem; line-height: 1.7;">
        AniTrack is built by anime fans, for anime fans. Our mission is to make your anime experience more
        enjoyable, organized, and social. Join us and become part of a growing community passionate about
        anime!
    </p>

    <!-- Sign Up Button (only for not logged in users) -->
    @if (!User.Identity.IsAuthenticated)
    {
        <div style="text-align: center; margin-top: 2.5rem;">
            <a class="btn btn-lg btn-primary" asp-area="Identity" asp-page="/Account/Register"
                style="padding: 0.75rem 2.5rem; font-size: 1.25rem;">
                Sign Up Now
            </a>
        </div>
    }
</div>
